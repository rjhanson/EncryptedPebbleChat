<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ssuser.ss.sunstonechat.NewContactCreateActivity"
    android:touchscreenBlocksFocus="false"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0">

            <Space
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_row="2"
                android:layout_column="0" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/imageView"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_action_add_person_dark"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:id="@+id/newContactBox"
                android:layout_row="6"
                android:layout_column="0"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            android:layout_row="1"
            android:layout_column="0">

            <Space
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:text="Name"
                android:id="@+id/contactName"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="26sp"
                android:gravity="bottom|center" />

            <EditText
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:id="@+id/contactNameForm"
                android:layout_row="1"
                android:layout_column="1"
                android:singleLine="true"
                android:gravity="center"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="120dp"
                android:layout_height="36dp"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="49dp"
                android:text="Phone"
                android:id="@+id/snstContactId"
                android:layout_row="3"
                android:layout_column="0"
                android:textSize="26sp"
                android:gravity="bottom|center"
                android:textIsSelectable="true" />

            <EditText
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:id="@+id/contactNumberForm"
                android:layout_row="3"
                android:layout_column="1"
                android:singleLine="true"
                android:inputType="phone"
                android:gravity="center" />
        </GridLayout>

        <GridLayout
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0">

            <Space
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:layout_width="327dp"
                android:layout_height="63dp"
                android:text="Submit"
                android:id="@+id/submitBtn"
                android:layout_row="1"
                android:layout_column="0"
                android:onClick="onContactSubmit" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_row="2"
                android:layout_column="0" />

        </GridLayout>

    </GridLayout>

</RelativeLayout>
